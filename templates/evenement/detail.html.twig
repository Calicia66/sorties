
{% extends 'layout.html.twig' %}
{% block main %}

<div class="container">
    <div class="row">
        <div class="col-sm">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="{{ asset("images/logo.jpeg") }}" alt="Image de la sortie" >
                <div class="card-body">
                    <h5 class="card-title">{{ event.nom }}</h5>
                    <p class="card-text"><span>Déscription : </span>{{ event.descriptioninfos }}</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><span>Durée : </span>{{ event.duree }} </li>
                    <li class="list-group-item"><span>Etat : </span>{{ event.etatsortie }}</li>
                    <li class="list-group-item"><span>Places : </span>{{ event.places}}</li>
                    <li class="list-group-item"><span>Date de début : </span>{{ event.datedebut|date("Y-m-d H:i:s") }}</li>
                    <li class="list-group-item"><span>Date de cloture : </span>{{ event.datecloture|date("Y-m-d H:i:s") }}</li>
                </ul>
                <div class="card-header">
                    <h5 class="card-title">Liste des participants</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        {%  for user in event.users %}
                            <li class="list-group-item"> {{ user.username }}</li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="card-body">
                    <a href="{{ path('evenement_suscribe', {event: event.id})}}" class="card-link"><button type="button" class="btn btn-primary">S'inscrire</button></a>
                    <a href="{{ path('evenement_edit', {id: event.id})}}" class="card-link"><button type="button" class="btn btn-primary">Modifier</button></a>
                </div>
                {% endblock %}
                {% block title %} Les sorties ! {% endblock %}

